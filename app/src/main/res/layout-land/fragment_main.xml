<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:name="com.thanksmister.iot.mqtt.alarmpanel.ui.fragments.InformationFragment"
        android:id="@+id/informationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_information" />

    <fragment
        android:name="com.thanksmister.iot.mqtt.alarmpanel.ui.fragments.ControlsFragment"
        android:id="@+id/controlContainer"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="h,16:8"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintBottom_toTopOf="@id/settingsContainer"
        app:layout_constraintEnd_toStartOf="@id/guidelineHR"
        app:layout_constraintStart_toStartOf="@id/guidelineHL"
        app:layout_constraintTop_toBottomOf="@id/informationContainer"
        android:layout_height="0dp"
        tools:layout="@layout/fragment_controls" />

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="2dp">

            <ImageButton
                android:id="@+id/alertButton"
                style="@style/BorderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/account_voice"
                android:tint="@color/red"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="16dp"
                android:layout_height="24dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/buttonPlatformLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/platformButton"
                    style="@style/BorderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home"
                    android:tint="@color/dark_gray"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="24dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/buttonSleepLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonSleep"
                    style="@style/BorderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sleep"
                    android:tint="@color/dark_gray"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="24dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageButton
                android:id="@+id/buttonSettings"
                style="@style/BorderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings_black"
                android:tint="@color/dark_gray"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/triggeredView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"
        android:visibility="gone">

        <include
            android:id="@+id/alarmTriggeredView"
            layout="@layout/dialog_alarm_triggered_code" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>